VerifyButton.Position = UDim2.new(0.1, 0, 0.55, 0)
VerifyButton.Size = UDim2.new(0.8, 0, 0, 50)
VerifyButton.Text = "验证并进入"
VerifyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
